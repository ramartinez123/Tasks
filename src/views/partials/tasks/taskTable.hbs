{{#if tasks}}
<table class="table table-bordered table-hover table-striped">
  <thead class="bg-success text-white">
    <tr>
      <th>NÂ°</th>
      <th>Titulo</th>
      <th>Descripcion</th>
      <th>Operacion</th>
    </tr>
  </thead>
  <tbody>
    {{#each tasks}}
    <tr>
      <td>{{@index}}</td>
      <td>{{title}}</strong></td>
      <td>{{description}}</td>
      <td>
        {{#if done}}
          <a class="btn btn-success btn-sm" href="/tasks/toggleDone/{{_id}}">
             <i class="bi bi-check-circle"></i> Done
          </a>
        {{else}}
          <a class="btn btn-dark btn-sm" href="/tasks/toggleDone/{{_id}}">
             <i class="bi bi-x-circle"></i> Undone
          </a>
        {{/if}}
          <a href="/tasks/delete/{{_id}}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this task?');">
            <i class="bi bi-trash"></i> Delete
          </a>
          <a href="/tasks/edit/{{_id}}" class="btn btn-info btn-sm">
            <i class="bi bi-pencil"></i> Edit
          </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<div class="h-100 d-flex align-items-center justify-content-center">
  <div class="text-center">
    <h2 class="text-success mb-3">No tasks</h2>
    <img src="/icons/empty.svg" class="img-fluid" alt="No tasks image" />
  </div>
</div>
{{/if}}