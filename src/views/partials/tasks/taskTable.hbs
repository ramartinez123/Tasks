{{#if tasks}}
<table class="table table-bordered table-hover table-striped">
  <thead >
    <tr>
      <th>NÂ°</th>
      <th>Titulo</th>
      <th>Descripcion</th>
      <th>Operacion</th>
    </tr>
  </thead>
  <tbody>
    {{#each tasks}}
    <tr>
      <td>{{@index}}</td>
      <td><strong>{{title}}</strong></td>
      <td>{{description}}</td>
      <td>
        {{#if done}}
           <a class="btn btn-success" href="/tasks/toggleDone/{{_id}}">Done</a>
        {{else}}
           <a class="btn btn-dark" href="/tasks/toggleDone/{{_id}}"> Undone </a>
        {{/if}}
        
        <a href="/tasks/delete/{{_id}}" class="btn btn-danger" >
          Delete
        </a>
        <a href="/tasks/edit/{{_id}}" class="btn btn-info">
          Edit
        </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<div class="h-100 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>No tasks</h1>
    <img src="/icons/empty.svg" class="w-75" />
  </div>

</div>
{{/if}}